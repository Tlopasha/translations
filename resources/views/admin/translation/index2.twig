{% extends "antares/foundation::layouts.antares.index" %}
{% block content %}
    <div class="header-translations">
        <div>
            <select name="select" data-selectAR--mdl-short="true">
                <option value="all" selected>All</option>
                <option value="important">Important</option>
                <option value="secondary">Secondary</option>
            </select>
        </div>
        <div class="header-translations__search">
            <div class="search-box  search-box--dark search-box--big mr16">
                <i class="zmdi zmdi-search search-box__open"></i>
                <div class="search-box__mdl-textfield mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input search-box__search-field" type="text" id="main-search">
                    <label class="mdl-textfield__label" for="#main-search">Search...</label>
                </div>
                <i class="search-box__close zmdi zmdi-close mr16 "></i>
            </div>
        </div>
        <div class="header-translation__compare">
            <div class="ddown ddown--flags ddown">
                <div class="ddown__init btn btn--md mdl-js-button mdl-js-ripple-effect">
                    <div class="flag-icon flag-icon-fr flag-translate">
                    </div>
                    <div class="arrow">
                        <i class="zmdi zmdi-chevron-right"></i>
                    </div>
                    <div class="flag-icon flag-icon-us flag-compare">
                    </div>
                </div>
                <div class="ddown__content">
                    <div class="ddown__menu">
                        <div class="header-translation__country">
                            <div class="header-translation__select-text">Translate:
                            </div>
                            <div class="form-block">
                                <div class="input-field input-field--icon input-field--desc-right">
                                    <span class="input-field__icon"><span class="flag-icon"></span></span>
                                    <select class="header-translation__translate-select" name="select" data-flag-select-translations data-selectAR="true">

                                        <option data-country="pl" value="124124" ><span class="flag-icon flag-icon-pl"></span>English</option>
                                        <option data-country="us" value="aSDafd" selected>Option two... </option>
                                        <option data-country="fr" value="fa34wf4e3">Option three...</option>
                                        <option data-country="nl" value="asdasdas">Option 4</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="header-translation__country">
                            <div class="header-translation__select-text">Compare To:
                            </div>
                            <div class="form-block">
                                <div class="input-field input-field--icon input-field--desc-right">
                                    <span class="input-field__icon"><span class="flag-icon"></span></span>
                                    <select class="header-translation__compare-select" class="header-translation__" name="select" data-flag-select-translations data-selectAR="true">
                                        <option data-country="pl" value="124124" selected><span class="flag-icon flag-icon-pl"></span>English</option>
                                        <option data-country="us" value="aSDafd">Option two... </option>
                                        <option data-country="fr" value="fa34wf4e3">Option three...</option>
                                        <option data-country="nl" value="asdasdas">Option 4</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="translations-body">
        <div class="tbl-c tbl-translations">
            <table class="translations-table" data-adjust-height data-table-init="true" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="no-sort">ID</th>
                        <th>Key</th>
                        <th>Translate</th>
                        <th>Compare</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="translation-new-row ">
                        <td class="translation-row__counter"></td>
                        <td class="translation-new-row__key">
                            <fieldset>
                                <div class="form-block nomargin">
                                    <div class="input-field">
                                        <textarea rows='1' name="key" id="new-key" name="Text" placeholder="Key"></textarea>
                                    </div>
                                </div>
                            </fieldset>
                        </td>

                        <td class="translation-new-row__translation">
                            <fieldset>
                                <div class="form-block nomargin">
                                    <div class="input-field">
                                        <textarea rows='1' type="text" name="translation" id="translation" placeholder="Translation"></textarea>
                                    </div>
                                </div>
                            </fieldset>
                        </td>

                        <td class="translation-mobile-action">
                            <div class="translation-new-row__icon">
                                <i class="zmdi zmdi-plus"></i>
                            </div>
                            <div class="translations-new-row__mobile">
                                <a id="translations-new-row__add" name="action" class="btn btn--md btn--primary mdl-button mdl-js-button mdl-js-ripple-effect">Add translation</a>
                                <a id="translations-new-row__cancel"class="btn-link btn--default btn--md mdl-button mdl-js-button mdl-js-ripple-effect">Cancel</a>
                            </div>
                        </td>
                    </tr>


                    <tr class="translation-row">
                        <td class="translation-row__counter"></td>
                        <td class="table-key table-key--key table-key--editable">
                            <div class="table-key__mobile-open">
                                <i class="zmdi zmdi-chevron-down"></i>
                            </div>
                            <div class="table-key__inner">
                                <div class="table-key__text">global.modes.production</div>
                                <textarea name="test" rows='1'  name="text" class="table-key__input">
                                </textarea>
                                <div class="table-key__actions">
                                    <div class="table-key__remove"><i class="zmdi zmdi-close"></i></div>
                                    <div class="table-key__add"><i class="zmdi zmdi-check"></i></div>
                                </div>
                                <div class="table-key__init-edit">
                                    <i class="zmdi zmdi-edit"></i>
                                </div>
                            </div>
                        </td>
                        <td class="table-key table-key--editable  table-key--translate" data-cell-name="Translate">
                            <div class="table-key__inner">
                                <div class="table-key__text">Production</div>
                                <textarea name="test" rows='1' name="text" class="table-key__input">Production
                                </textarea>
                                <div class="table-key__actions">
                                    <div class="table-key__remove"><i class="zmdi zmdi-close"></i></div>
                                    <div class="table-key__add"><i class="zmdi zmdi-check"></i></div>
                                </div>
                                <div class="table-key__init-edit">
                                    <i class="zmdi zmdi-edit"></i>
                                </div>
                            </div>
                        </td>

                        <td class="table-key table-key--compare"  data-cell-name="compare">
                            <div class="table-key__inner">Produkcja
                                <div class="table-key__delete-row">
                                    <i class="zmdi zmdi-delete"></i>
                                </div>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
